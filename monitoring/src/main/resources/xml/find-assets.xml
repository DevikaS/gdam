<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<Script xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="schema.xsd">
    <applicationURL>https://a5.adstream.com</applicationURL>
    <action>
        <method>authSSO</method>
        <argument>
            <type>String</type>
            <value>monitoring@adstream.com</value>
        </argument>
        <argument>
            <type>String</type>
            <value>Password1</value>
        </argument>
    </action>
    <action>
        <method>findAssets</method>
        <argument>
            <type>String</type>
            <!-- 'My Assets' category id -->
            <value>50079d4adb016b1bf9952658</value>
        </argument>
        <argument>
            <type>Search</type>
        </argument>
        <assertion>
            <sizeMin>1</sizeMin>
        </assertion>
    </action>
    <action>
        <method>getAsset</method>
        <argument>
            <type>String</type>
            <value>533bca9ce4b0e1cb77f5c6e1</value>
        </argument>
        <assertion>
            <name>monitoring_asset.jpg</name>
        </assertion>
    </action>
    <action>
        <method>logoutSSO</method>
    </action>
</Script>